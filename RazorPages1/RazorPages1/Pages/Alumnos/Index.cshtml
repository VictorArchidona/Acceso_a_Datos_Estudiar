@page
@model RazorPages1.Pages.Alumnos.IndexModel
@{
}

<h1>Alumnos</h1>
<h3>@Model.Alumnos.Count()</h3>
<div class="card-deck">

    @foreach(var alumno in Model.Alumnos)
    {

        var photo = "~/images" + (alumno.Foto ?? "noimage.jpg");

        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%">

            <div class="card-header">

                <h3>@alumno.Nombre</h3>

            </div>

            <img class="card-ing-top imageThumbail" asp-append-version="true" src="@photo"/>

            <div class="card-footer text-center">

                <a href="#" class="btn btn-primary p-1">View</a>
                <a href="#" class="btn btn-warning p-1">Edit</a>
                <a href="#" class="btn btn-danger p-1">Delete</a>

            </div>

        </div>
    }

</div>