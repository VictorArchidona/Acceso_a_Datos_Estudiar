@page
@model RazorPages1.Pages.Alumnos.DetailsModel
@{
    var photo = "~/images/" + (@Model.Alumno.Foto ?? "noimage.jpg");
    var Alumno = Model.Alumno;
}


<div class="row justify-content-center m-3">

    <div class="card-header text-center">

        <h3>@Model.Alumno.Nombre</h3>

    </div>

    <div class="cardaccordion-body text-center">

        <img class="card-img-top" asp-append-version="true" src="@photo"/>
        <h4>Alumno ID: @Model.Alumno.Id</h4>
        <h4>Email: @Model.Alumno.Email</h4>
        <h4>Curso: @Model.Alumno.CursoID</h4>
    </div>

    <div class="card-footer text-center">

        <a asp-page="/Alumnos/Details" asp-route-ID="@Alumno.Id" class="btn btn-primary p-1">View</a>
        <a asp-page="/Alumnos/Edit" asp-route-ID="@Alumno.Id" class="btn btn-warning p-1">Edit</a>
        <a asp-page="/Alumnos/Delete" asp-route-ID="@Alumno.Id" class="btn btn-danger p-1">Delete</a>

    </div>

</div>