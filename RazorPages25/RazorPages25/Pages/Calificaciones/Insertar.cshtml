@page
@model RazorPages25.Pages.Calificaciones.InsertarModel
@{
}

<style>
    .contenedor {
        width: 600px;
        margin: 20px auto;
        font-family: Arial, Helvetica, sans-serif;
    }

    .fila {
        margin-bottom: 12px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 4px;
    }

    select, input[type="number"], input[type="text"] {
        padding: 6px;
        width: 100%;
        border-radius: 5px;
        border: 1px solid #888;
    }

    button {
        padding: 10px 20px;
        background-color: #006600;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
    }

    button:hover {
        background-color: #004d00;
    }
</style>
<div class="contenedor">
    <form method="get">
        <div class="fila">
            <label asp-for="calificacion.convocatoria">Convocatoria</label>
	        <select asp-for="calificacion.convocatoria" onchange="submit()">
		        <option value="">Selecciona convocatoria </option>
		        @foreach (var convocatoria in @Model.convocatorias)
		        {
			        <option value="@convocatoria" label="@convocatoria"></option>
		        }
	        </select>
        </<div>
        <div class="fila">
            <label asp-for="curso">Curso</label>
	        <select asp-for="curso" onchange="submit()">
		        <option value="">Selecciona un curso </option>
		        @foreach (var curso in @Model.Cursos)
		        {
			        <option value="@curso" label="@curso"></option>
		        }
	        </select>
        </<div>
        <div class="fila">
            <label asp-for="asignaturaID">Asignatura</label>
	        <select asp-for="asignaturaID" onchange="submit()">
		        <option value="">Selecciona una asignatura </option>
		        @foreach (var asignatura in @Model.asignaturas)
		        {
			        <option value="@asignatura.Id" label="@asignatura.codAsignatura - @asignatura.nomAsignatura"></option>
		        }
	        </select>
        </div>
        <div class="fila">
            <label asp-for="calificacion.alumnoID">Alumno</label>
	        <select asp-for="calificacion.alumnoID" onchange="submit()">
		        <option value="">Selecciona un alumno</option>
		        @foreach (var alumno in @Model.alumnos)
		        {
			        <option value="@alumno.Id" label="@alumno.Nombre"></option>
		        }
	        </select>
        </div>

    </form>

    <form method="post">
	        <input asp-for="calificacion.convocatoria" type="hidden" />
	        <input asp-for="curso" type="hidden" />
	        <input asp-for="calificacion.asignaturaID" type="hidden" />
	        <input asp-for="calificacion.alumnoID" type="hidden" />
        <div class="fila">
	        <label asp-for="calificacion.nota">Calificación : </label>
	        <input asp-for="calificacion.nota" size="2" max="10" min="1" />
        </div>
	        <button type="submit">Insertar</button>
    </form>

    @if (Model.CalificacionesMostradas != null && Model.CalificacionesMostradas.Any())
    {
        <div class="calificaciones-listado">
            <h3>Calificaciones existentes</h3>

            <table>
                <thead>
                    <tr>
                        <th>Alumno</th>
                        <th>Nota</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cal in Model.CalificacionesMostradas)
                    {
                        // Buscamos el alumno en la lista ya cargada
                        var alum = Model.alumnos.FirstOrDefault(a => a.Id == cal.alumnoID);

                        <tr>
                            <td>@(alum?.Nombre ?? "Alumno no encontrado")</td>
                            <td>@cal.nota</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>