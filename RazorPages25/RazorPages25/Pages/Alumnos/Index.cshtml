@model RazorPages25.Pages.Alumnos.IndexModel
@{
}
<form method="get">
	<div class="input-ground">
		<input class="form-control" asp-for="elementoABuscar"/>
		<div class="input-group-append">
			<button type="submit" class="btn btn-primary">Busca!</button>
		</div>
	</div>
</form>
<div class="col-sm-8">
	@await Component.InvokeAsync("AlumnosCurso")
</div>
<div class="card-group">
	@foreach (var alumno in @Model.Alumnos){
		var photo = "~/images/" + (alumno.Foto ?? "noImage.jpg");
		<div class="card-m-3" style="min-width:18rem; max-width:25%">
			<div class="card-header text-center">
				<h3>@alumno.Nombre</h3>
			</div>
			<img class="card-img-top imageThumbail d-block mx-auto" asp-append-version="true" src="@photo" />
			<div class="card-footer text-center">
				<a asp-page="/Alumnos/Details" asp-route-ID="@alumno.Id" class="btn btn-primary m-1">View</a>
				<a asp-page="/Alumnos/Edit" asp-route-ID="@alumno.Id" class="btn btn-primary m-1">Edit</a>
				<a asp-page="/Alumnos/Delete" asp-route-ID="@alumno.Id" class="btn btn-danger m-1">Delete</a>
			</div>
		</div>
	}



</div>